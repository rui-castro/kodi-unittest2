<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.unittest2"
       name="unittest2"
       version="1.1.0"
       provider-name="Rui Castro">
  <requires>
    <import addon="script.module.traceback2" version="1.4.0"/>
    <import addon="script.module.argparse" version="1.3.0"/>
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary>unittest2 is a backport of the new features added to the unittest testing framework in Python 2.7
        and onwards. It is tested to run on Python 2.6, 2.7, 3.2, 3.3, 3.4 and pypy.</summary>
    <description>Packed for KODI from https://pypi.python.org/pypi/unittest2</description>
    <license>BSD</license>
    <platform>all</platform>
    <source>https://github.com/rui-castro/kodi-unittest2</source>
  </extension>
</addon>
